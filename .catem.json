{
  "global_exclude": [
    "**/venv/**",
    "**/__pycache__/**",
    "**/.git/**",
    "**/.pytest_cache/**",
    "**/.mypy_cache/**"
  ],
  "files_patterns": {
    "src": {
        "include": [
            "CMakeLists.txt",
            "src/**/CMakeLists.txt",
            "src/**/*.cpp",
            "src/**/*.h",
            "tests/**/CMakeLists.txt",
            "tests/**/*.cpp",
            "tests/**/*.h"
        ]
    },
    "hasher": {
      "include": [
        "src/hasher/**/*.cpp",
        "src/hasher/**/*.h",
        "src/hasher/**/CMakeLists.txt"
      ]
    },
    "hasher-http": {
      "include": [
        "hasher/http.cpp",
        "hasher/http.h"
      ]
    }
  }
}
