{
  "global_exclude": [
    "**/venv/**",
    "**/__pycache__/**",
    "**/.git/**",
    "**/.pytest_cache/**",
    "**/.mypy_cache/**"
  ],
  "files_patterns": {
    "all": {
        "include": [
            "CMakeLists.txt",
            "src/**/CMakeLists.txt",
            "src/**/*.cpp",
            "src/**/*.h",
            "tests/**/CMakeLists.txt",
            "tests/**/*.cpp",
            "tests/**/*.h"
        ]
    },
    "tests": {
      "include": [
        "tests/**/CMakeLists.txt",
        "tests/**/*.cpp",
        "tests/**/*.h"
      ]
    },
    "hasher": {
      "include": [
        "src/hasher/**/*.cpp",
        "src/hasher/**/*.h",
        "src/hasher/**/CMakeLists.txt"
      ]
    },
    "shamap": {
      "include": [
        "src/shamap/**/*.cpp",
        "src/shamap/**/*.h",
        "src/shamap/**/CMakeLists.txt",
        "tests/**/shamap*.*",
        "tests/**/test-utils.*"
      ]
    },
    "hasher-http": {
      "include": [
        "src/hasher/src/http-server.cpp",
        "src/hasher/src/http-handler.cpp",
        "src/hasher/includes/catl/hasher/http/*.h"
      ]
    }
  }
}
