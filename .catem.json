{
  "global_exclude": [
    "**/venv/**",
    "**/__pycache__/**",
    "**/.git/**",
    "**/.pytest_cache/**",
    "**/.mypy_cache/**"
  ],
  "files_patterns": {
    "entry" :{
      "include": [
        ".ai-docs/entry-point.md",
        ".ai-docs/three-insights.md",
        ".ai-docs/tool-use.md",
        ".ai-docs/build-and-test-commands.md"
      ]
    },
    "cmake" : {
      "include": [
          "**/*/CMakeLists.txt"
      ]  
    },
    "all": {
        "include": [
            "CMakeLists.txt",
            ".github/**/*.yaml",
            "scripts/**/*.py",
            "scripts/**/*.sh",
            "src/**/CMakeLists.txt",
            "src/**/*.cpp",
            "src/**/*.h",
            "tests/**/CMakeLists.txt",
            "tests/**/*.cpp",
            "tests/**/*.h",
            "Dockerfile",
            "conanfile.*"
        ]
    },
    "logger": {
      "include": [
          "src/core/**/*logger*"
      ]
    },
    "core-types": {
      "include": [
          "src/core/**/*types*"
      ]
    },
    "tests": {
      "include": [
        "tests/**/CMakeLists.txt",
        "tests/**/*.cpp",
        "tests/**/*.h"
      ]
    },
    "hasher": {
      "include": [
        "src/hasher/**/*.cpp",
        "src/hasher/**/*.h",
        "src/hasher/**/CMakeLists.txt"
      ]
    },
    "shamap": {
      "include": [
        "src/shamap/**/*.cpp",
        "src/shamap/**/*.h",
        "src/shamap/**/CMakeLists.txt",
        "tests/**/*.cpp",
        "tests/**/*.h"
      ]
    },
    "shamap-tests": {
      "include": [
        "tests/**/*.cpp",
        "tests/**/*.h"
      ]
    },
    "slicer": {
      "include": [
        "src/utils/src/slicer",
        "src/utils/includes/catl/utils/slicer/arg-options.h",
        "src/utils/includes/catl/utils/slicer/utils.h",
        "src/utils/src/slicer/arg-options.cpp",
        "src/utils/src/slicer/catl-slice.cpp",
        "src/utils/src/slicer/utils.cpp",
        "src/catalogue-v1/src/catl-v1-reader.cpp",
        "src/catalogue-v1/src/catl-v1-simple-state-map.cpp",
        "src/catalogue-v1/src/catl-v1-reader-shamap.cpp",
        "src/catalogue-v1/src/catl-v1-writer.cpp",
        "src/catalogue-v1/includes/catl/v1/catl-v1-reader.h",
        "src/catalogue-v1/includes/catl/v1/catl-v1-simple-state-map.h",
        "src/catalogue-v1/includes/catl/v1/catl-v1-writer.h",
        "src/catalogue-v1/includes/catl/v1/catl-v1-structs.h",
        "src/catalogue-v1/includes/catl/v1/catl-v1-utils.h"
      ]
    },
    "hasher-http": {
      "include": [
        "src/hasher/src/http-server.cpp",
        "src/hasher/src/http-handler.cpp",
        "src/hasher/includes/catl/hasher/http/*.h"
      ]
    }
  }
}
