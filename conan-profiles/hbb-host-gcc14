[settings]
os=Linux
arch=x86_64
compiler=gcc
compiler.version=14
compiler.libcxx=libstdc++11
compiler.cppstd=20
build_type=Release

[options]
*:shared=False
*:fPIC=True

[conf]
# Use Ninja for speed
tools.cmake.cmaketoolchain:generator=Ninja

# Inject static linking flags into our CMake build via conan_toolchain.cmake
tools.cmake.cmaketoolchain:extra_variables={"CMAKE_EXE_LINKER_FLAGS_INIT":"-static-libstdc++ -static-libgcc"}
